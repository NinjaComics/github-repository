<?xml version="1.0"?>
<block>
  <name>SC-FDMA Carrier Allocator</name>
  <key>howto_sc_fdma_carrier_allocator_cvc</key>
  <category>HOWTO</category>
  <import>import howto</import>
  <make>howto.sc_fdma_carrier_allocator_cvc($fft_len, $occupied_carriers, $len_tag_key)</make>
  <param>
    <name>FFT length</name>
    <key>fft_len</key>
    <value>fft_len</value>
    <type>int</type>
  </param>
  <param>
    <name>Occupied Carriers</name>
    <key>occupied_carriers</key>
    <type>raw</type>
  </param>
  <param>
    <name>Length tag key</name>
    <key>len_tag_key</key>
    <value>"packet_len"</value>
    <type>string</type>
  </param>
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>
  <source>
    <name>out</name>
    <type>complex</type>
    <vlen>$fft_len</vlen>
  </source>
</block>
